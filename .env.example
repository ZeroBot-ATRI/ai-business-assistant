# Claude API Configuration
CLAUDE_API_KEY=sk-ant-xxxxx  # 从 https://console.anthropic.com/ 获取

# Database Configuration (SQLite for development)
DATABASE_URL=sqlite:///./database.db

# JWT Authentication
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080  # 7天

# Email Service (Day 5新增)
EMAIL_MODE=mock  # mock, smtp, sendgrid
FROM_EMAIL=noreply@yourcompany.com
FROM_NAME=AI助手

# SMTP配置（EMAIL_MODE=smtp时需要）
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your@gmail.com
# SMTP_PASSWORD=your_app_password

# SendGrid配置（EMAIL_MODE=sendgrid时需要）
# SENDGRID_API_KEY=your-sendgrid-key

# Skills Configuration (Day 4新增)
USE_REAL_SKILLS=true  # true使用真实API，false使用Mock数据

# Internal APIs (Day 4+，根据实际情况配置)
ORDER_API_BASE=http://localhost:9000  # 订单系统API（开发环境使用Mock API Server）
INVENTORY_API_BASE=http://localhost:9000  # 库存系统API
LOGISTICS_API_BASE=http://localhost:9000  # 物流系统API
# 生产环境示例:
# ORDER_API_BASE=https://your-order-api.com
# ORDER_API_KEY=your-api-key
# INVENTORY_API_BASE=https://your-inventory-api.com

# Environment
ENV=development  # development | production
DEBUG=true

# Server Configuration
API_HOST=0.0.0.0
API_PORT=8000
UI_PORT=8501
